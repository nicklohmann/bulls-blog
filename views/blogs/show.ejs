<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <%- include('../partials/nav') %>
    <main>
      <h1>
        <%= blog.title %>
      </h1>
      <section id="blog Post">
        <p id="Author">
          <img src="<%= blog.author.avatar %>">
          <br>
          <a href="/<%  %>"></a>
          <%= blog.author.name %>
        </p>
        <p>
          <%= blog.content %>
        </p>
        <h2 id="Comment">Comments</h2>
        <% if (user) {%>
          <ul id="Comment">
            <% blog.comments?.forEach(comment=> { %>
              <li>
                <%= comment.content %> - <%= comment.author.name %>
                    <% if (comment.author.equals(user?.profile)) { %>
                      <form action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST"
                        class="inline">
                        <button class="btn" type="submit">Delete Comment</button>
                      </form>
                      <a href="/blogs/<%= blog._id %>/comments/<%= comment._id %>/edit">
                        <button class="btn">Edit Comment</button>
                      </a>
                      <% } %>
              </li>
              <% }) %>
          </ul>
          <form id="Comment" action="/blogs/<%= blog._id %>/comments" method="POST">
            <textarea id="contentarea" name="content"></textarea><br>
            <button id="CommentButton">Add Comment</button>
          </form>
          <% } %>
            </div>
      </section>
    </main>



    <%- include('../partials/footer') %>
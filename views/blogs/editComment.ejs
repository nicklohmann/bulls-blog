<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<h1 id="EditHeading">Edit your comment!</h1>
<section>
  
  <form id="UpdateComment"
    action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=PUT" 
    method="POST"
  >
    <label>
      Comment : 
      <textarea
        cols="30"
        rows="5" 
        type="text"
        name="content" 
        autocomplete="off"
      ><%= comment.content %></textarea>
    </label>
    <button id="Direct"><i class="fa-solid fa-comment"></i></button>
  </form>
</section>


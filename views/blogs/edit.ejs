<main>
  <h1> blogs Edit View of : <% title %> </h1>
  <section>
    <div>Title: <%= blog.title %>

      <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST"><button>Delete Post</button></form>
    </div>
    <div>
      <%= blog.content %>    
    </div>
    <form
      id="new-form"
      action="/blogs/<%= blog._id %>?_method=PUT" 
      method="POST"
    >
    <label for="title-input">Title: </label>
    <input type="text" name="title" value="<%= blog.title %>" id="title-input">
    <label for="content-input">Content: </label>
    <input type="text"name="content"value="<%= blog.content %>"id="content-input"
      >
      <button type="submit">Save Changes</button>
    </form>
  </section>
  </main>
